{
  "app": {
    "name": "api"
  },
  "consul": {
    "url": "http://consul:8500",
    "service": "api",
    "address": "api",
    "port": "5000",
    "pingEnabled": false,
    "pingEndpoint": "ping",
    "pingInterval": 5,
    "removeAfterInterval": 10,
    "requestRetries": 3
  },
  "elk": {
    "enabled": false,
    "url": "http://logstash:9200",
    "indexFormat": "api-{0:yyyy.MM.dd}",
    "basicAuthEnabled": false,
    "username": "user",
    "password": "secret"
  },
  "metrics": {
    "enabled": true,
    "prometheusEnabled": true,
    "influxUrl": "http://influx:8086",
    "database": "dshop",
    "env": "docker",
    "interval": 5
  },
  "rawRabbit": {
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [ "rabbitmq" ],
    "requestTimeout": "00:00:10",
    "publishConfirmTimeout": "00:00:01",
    "recoveryInterval": "00:00:10",
    "persistentDeliveryMode": true,
    "autoCloseConnection": true,
    "automaticRecovery": true,
    "topologyRecovery": true,
    "exchange": {
      "durable": true,
      "autoDelete": false,
      "type": "Topic"
    },
    "queue": {
      "autoDelete": false,
      "durable": true,
      "exclusive": false
    }
  },
  "restEase": {
    "useConsul": false,
    "services": [
      {
        "name": "customers-service",
        "host": "customers-service",
        "scheme": "http",
        "port": "5001"
      },
      {
        "name": "operations-service",
        "host": "operations-service",
        "scheme": "http",
        "port": "5004"
      },
      {
        "name": "orders-service",
        "host": "orders-service",
        "scheme": "http",
        "port": "5005"
      },
      {
        "name": "products-service",
        "host": "products-service",
        "scheme": "http",
        "port": "5006"
      }
    ]
  },
  "serilog": {
    "consoleEnabled": true,
    "level": "information"
  },
  "seq": {
    "enabled": true,
    "url": "http://seq:5341",
    "token": "secret"
  },
  "swagger": {
    "enabled": true,
    "reDocEnabled": false,
    "name": "v1",
    "title": "API",
    "version": "v1",
    "routePrefix": "docs",
    "includeSecurity": true
  },
  "vault": {
    "enabled": false,
    "url": "http://vault:8200",
    "key": "api/options",
    "authType": "token",
    "token": "secret",
    "username": "user",
    "password": "secret"
  }
}