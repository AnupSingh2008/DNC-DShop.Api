{
  "consul": {
    "endpoint": "http://consul:8500",
    "service": "api",
    "address": "api",
    "port": "5000",
    "pingEnabled": false,
    "pingEndpoint": "ping",
    "pingInterval": 5,
    "removeAfterInterval": 10,
    "requestRetries": 3
  },
  "metrics": {
    "database": "dshop",
    "uri": "http://app-metrics:8086",
    "env": "docker",
    "interval": 5,
    "enabled": true
  },
  "rawRabbit": {
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [ "rabbitmq" ],
    "requestTimeout": "00:00:10",
    "publishConfirmTimeout": "00:00:01",
    "recoveryInterval": "00:00:10",
    "persistentDeliveryMode": true,
    "autoCloseConnection": true,
    "automaticRecovery": true,
    "topologyRecovery": true,
    "exchange": {
      "durable": true,
      "autoDelete": false,
      "type": "Topic"
    },
    "queue": {
      "autoDelete": false,
      "durable": true,
      "exclusive": false
    }
  },
  "restEase": {
    "useConsul": false,
    "services": [
      {
        "name": "customers-service",
        "host": "customers-service",
        "scheme": "http",
        "port": "5001"
      },
      {
        "name": "operations-service",
        "host": "operations-service",
        "scheme": "http",
        "port": "5004"
      },
      {
        "name": "orders-service",
        "host": "orders-service",
        "scheme": "http",
        "port": "5005"
      },
      {
        "name": "products-service",
        "host": "products-service",
        "scheme": "http",
        "port": "5006"
      }
    ]
  }
}